<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/OuterTools/FlatAdmin/img/favicon.png">

    <title>Alışveriş</title>

    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/FlatAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/FlatAdmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <link href="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
    <link href="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />

    <link href="~/OuterTools/FlatAdmin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/OuterTools/FlatAdmin/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/FlatAdmin/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/style-responsive.css" rel="stylesheet" />

    <script src="~/OuterTools/FlatAdmin/js/jquery.js"></script>
    <script type="text/javascript" language="javascript" src="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/js/jquery.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery-1.8.3.min.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/bootstrap.min.js"></script>

    <script type="text/javascript" language="javascript" src="~/OuterTools/FlatAdmin/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

    <script src="~/OuterTools/FlatAdmin/js/jquery.stepy.js"></script>
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="@Url.Action("ShoppingList", "Shopping", new { Area=""})" class="logo">Alışveriş<span>Sitesi</span></a>
            <!--logo end-->
            <div class="top-nav ">
                <!--search & user info start-->
                @if (Session["member"] != null)
                {
                    <ul class="nav pull-right top-menu">
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <img src="~/Pictures/anonim2.png" alt="Resim Yok" title="Anonim" style="width:29px; height:29px;"/>
                                <span class="username">@((Session["member"] as AppUser).Profile.FullName)</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended logout">
                                <div class="log-arrow-up"></div>
                                @RenderSection("Sepet", false)
                                <li><a href="@Url.Action("LogOut", "Home")"><i class="icon-key"></i> Log Out</a></li>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->
                    </ul>
                    <!--search & user info end-->
                }
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-th-list"></i>
                            <span>Admin Paneli</span>
                        </a>
                        <ul class="sub">
                            <li><a href="@Url.Action("CategoryList", "Category", new { Area="Admin"})">Kategori Crud</a></li>
                            <li><a href="@Url.Action("ProductList", "Product", new { Area="Admin"})">Ürün Crud</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="@Url.Action("ShoppingList", "Shopping", new { Area=""})">
                            <i class="icon-glass"></i>
                            <span>Alışveriş</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("CartPage", "Shopping", new { Area=""})">
                            <i class="icon-shopping-cart"></i>
                            <span>Sepet</span>
                        </a>
                    </li>

                    @if (Session["member"] != null || Session["admin"] != null)
                    {
                        <li>
                            <a href="@Url.Action("LogOut", "Home", new { Area=""})">
                                <i class="icon-off"></i>
                                <span>Çıkış Yap</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("RegisterNow", "Register", new { Area=""})">
                                <i class="icon-user"></i>
                                <span>Üye Ol</span>
                            </a>
                        </li>


                        <li>
                            <a href="@Url.Action("Login", "Home", new { Area=""})">
                                <i class="icon-user"></i>
                                <span>Giriş Yap</span>
                            </a>
                        </li>
                    }
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">

                @RenderBody()

            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                Tuğberk Mehdioğlu
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script class="include" type="text/javascript" src="~/OuterTools/FlatAdmin/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.scrollTo.min.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/OuterTools/FlatAdmin/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/owl.carousel.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/jquery.customSelect.min.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="~/OuterTools/FlatAdmin/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="~/OuterTools/FlatAdmin/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~/OuterTools/FlatAdmin/js/sparkline-chart.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/easy-pie-chart.js"></script>
    <script src="~/OuterTools/FlatAdmin/js/count.js"></script>

    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>

</body>
</html>
