@model AppUserVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/OuterTools/FlatAdmin/img/favicon.png">

    <title>Alışveriş</title>

    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/FlatAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/FlatAdmin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/FlatAdmin/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/FlatAdmin/css/style-responsive.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

    <style>

        .field-validation-error {
            color: red;
            font-weight: bold;
        }
    </style>

</head>
<body class="login-body">
    <div style="text-align: center; font-weight:bolder; font-size:medium">
        
        <h3 style="color:red">@ViewBag.ZatenVar</h3>

    </div>
        

        <div class="container">

            @using (Html.BeginForm("RegisterNow", "Register", FormMethod.Post, new { @class = "form-signin" }))
            {
                <h2 class="form-signin-heading">Kayıt</h2>
                <div class="login-wrap">
                    @Html.ValidationMessageFor(x => x.AppUser.UserName)
                    @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control", placeholder = "Kullanıcı adı" })

                    @Html.ValidationMessageFor(x => x.AppUser.Password)
                    @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Şifre" })

                    @Html.ValidationMessageFor(x => x.AppUser.Email)
                    @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "Email" })

                    @Html.ValidationMessageFor(x => x.UserProfile.FirstName)
                    @Html.TextBoxFor(x => x.UserProfile.FirstName, new { @class = "form-control", placeholder = "İsim" })

                    @Html.ValidationMessageFor(x => x.UserProfile.LastName)
                    @Html.TextBoxFor(x => x.UserProfile.LastName, new { @class = "form-control", placeholder = "Soyisim" })

                    <div class="text-center" style="font-family:'DejaVu Serif'; font-weight:bold">Adres Bilgileri</div>

                    <br />

                    @Html.ValidationMessageFor(x => x.UserProfile.Country)
                    @Html.TextBoxFor(x => x.UserProfile.Country, new { @class = "form-control", placeholder = "Ülke" })

                    @Html.ValidationMessageFor(x => x.UserProfile.City)
                    @Html.TextBoxFor(x => x.UserProfile.City, new { @class = "form-control", placeholder = "Şehir" })

                    @Html.ValidationMessageFor(x => x.UserProfile.Region)
                    @Html.TextBoxFor(x => x.UserProfile.Region, new { @class = "form-control", placeholder = "İlçe" })

                    @Html.ValidationMessageFor(x => x.UserProfile.Address)
                    @Html.TextBoxFor(x => x.UserProfile.Address, new { @class = "form-control", placeholder = "Adres" })

                    <button class="btn btn-lg btn-login btn-block">Kayıt ol</button>

                    <div class="registration">
                        Üyeliğiniz var mı?
                        @Html.ActionLink("Giriş yap", "Login", "Home")
                    </div>

                </div>
            }
        </div>



</body>
</html>
