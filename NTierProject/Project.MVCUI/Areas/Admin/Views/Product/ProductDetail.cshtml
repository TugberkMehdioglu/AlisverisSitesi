@model ProductVM
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center" style="font-family:'Agency FB'; font-size:x-large">Ürün Detay</div>

<div><h4>Ürün eklemek için @Html.ActionLink("tıklayınız", "AddProduct")</h4></div>

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Ürün ID</th>
                    <th>Ürün Adı</th>
                    <th>Kategorisi</th>
                    <th>Ürün Fiyat</th>
                    <th>Ürün Resmi</th>
                    <th class="hidden-phone text-center">Durum</th>
                    <th class="hidden-phone text-center">Güncelle</th>
                    <th class="hidden-phone text-center">Sil</th>
                </tr>
            </thead>
            <tbody>
                <tr class="gradeX">
                    <td>@Model.Product.ID</td>
                    <td>@Model.Product.Name</td>
                    @if (Model.Product.Category == null)
                    {
                        <td>Kategorisi Belirtilmemiş</td>
                    }
                    else
                    {
                        <td>@Model.Product.Category.Name</td>
                    }
                    <td>@Model.Product.UnitPrice</td>
                    <td><img width="30" height="30" title="@Model.Product.Name" src="@Model.Product.ImagePath" alt="Resim Yok" /></td>
                    <td class="center hidden-phone">@Model.Product.Status</td>
                    <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateProduct", new { id = Model.Product.ID }, new { @class = "btn btn-warning" })</td>
                    <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = Model.Product.ID }, new { @class = "btn btn-danger" })</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<script src="~/Areas/Admin/AdminContent/ProductDTJ.js" type="text/javascript"></script>
@*//External Js*@