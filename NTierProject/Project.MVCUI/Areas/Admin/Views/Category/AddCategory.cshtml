@model CategoryVM
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>

    /*Belirtilen class'lara sahip yapılarda yapılmasını istediğimiz ayarlamalar*/

    .genislik{

        width:300px;
    }

    .field-validation-error {
        color: red;
    }

</style>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel panel-title">

                <header class="panel-heading text-center" style="font-family:'Agency FB'; font-size:x-large">
                    Kategori Ekleme
                </header>

                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Kategori Adı:</label>
                        <div class="col-sm-10">
                            @Html.ValidationMessageFor(x => x.Category.Name)@*Bu property'de validation hatası alınıyorsa göster*@
                            @Html.TextBoxFor(x => x.Category.Name, new { @class = "form-control genislik" })
                        </div>                        
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Kategori Açıklaması:</label>
                        <div class="col-sm-10">
                            @Html.ValidationMessageFor(x => x.Category.Description)@*Bu property'de validation hatası alınıyorsa göster*@
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Ekle</label>
                        <div class="col-sm-10">
                            <button class="btn btn-success">Kategori Ekle</button>@*Post işleminin başlayabilmesi için buton gerekli*@
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
}